---
export interface Props {
  title?: string;
  lang?: string;
  lineNumbers?: boolean;
}

const { title, lang } = Astro.props;
---

<style>
  figcaption {
    @apply font-mono font-bold p-2 translate-y-3 rounded-t-md border-t-2 border-l-2 border-r-2 bg-orange-200 border-orange-500;
  }

  :global(.dark) figcaption {
    @apply bg-teal-900 border-teal-500 text-teal-500;
  }
</style>

<figure
  class={`prose-pre:m-0 prose-pre:rounded-md prose-pre:border-2 prose-pre:border-orange-500 relative -z-10 prose-pre:dark:border-teal-500`}
>
  {
    (title || lang) && (
      <figcaption class="text-orange-600 dark:text-teal-400">
        {title || lang?.toUpperCase()}
      </figcaption>
    )
  }
  <slot />
</figure>
