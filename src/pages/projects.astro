---
import ProjectCard from "@components/projects/ProjectCard.astro";
import BaseLayout from "@layouts/BaseLayout.astro";
import { getCollection } from 'astro:content';

const projects = await getCollection('projects');
---

<BaseLayout title="Viet Hung Nguyen | Projects">
  <main class="max-w-screen-lg flex-1 mx-auto">
    <h2 class="text-center text-4xl font-bold py-6">Project Gallery</h2>
    <div
      class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-x-6 gap-y-12 mt-6"
    >
      {
        projects.map((project) => (
          <ProjectCard project={project} />
        ))
      }
    </div>
  </main>
</BaseLayout>
